{
  "name": "ng-translation",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "start:lib": "ng build --watch ng-translation",
    "build:lib": "ng build ng-translation",
    "build:analyze": "npm run build -- --source-map && npm run view:analyze",
    "view:analyze": "node_modules/.bin/source-map-explorer dist/ng-translation-demo/*",
    "pack:lib": "npm run build:lib && cd dist/ng-translation/ && npm pack && mv *.tgz ../../download",
    "build:libs": "ng-packagr -p projects/ng-translation/ng-package.json",
    "pack:libs": "cd dist/ng-translation && npm pack && cd ../..",
    "package:libs": "npm run build:libs && npm run pack:libs",
    "install-tarball": "npm i ./dist/ng-translation/ng-translation-0.0.1.tgz",
    "all": "npm run package:libs && npm run install-tarball",
    "reset:libs": "npm remove ng-translation"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "lodash-es": "^4.17.21",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "uuid": "^8.3.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.11",
    "@angular/cli": "~12.2.11",
    "@angular/compiler-cli": "~12.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^12.11.1",
    "@types/uuid": "^8.3.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^12.1.1",
    "source-map-explorer": "^2.5.2",
    "typescript": "~4.3.5"
  }
}
